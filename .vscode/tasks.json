{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake: build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build", // 在build目录进行编译
                "--config",
                "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "编译项目 (使用 CMake)"
        },
        {
            "label": "cmake: configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build",
                "-DCMAKE_BUILD_TYPE=Debug" // 配置为Debug模式，便于调试[citation:4]
            ],
            "group": "build",
            "detail": "配置CMake项目 (首次或CMakeLists.txt更改后运行)"
        },
        {
            "label": "cmake: clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "clean"
            ],
            "group": "build",
            "detail": "清理构建输出"
        }
    ]
}