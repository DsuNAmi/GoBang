{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/GoBang", // 对应CMakeLists中的目标名
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "为 gdb 启用整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "cmake: build", // 调试前自动执行名为"cmake: build"的任务[citation:2]
            "miDebuggerPath": "/usr/bin/gdb" // Linux/macOS上通常如此，Windows上需修改为对应路径
        }
    ]
}